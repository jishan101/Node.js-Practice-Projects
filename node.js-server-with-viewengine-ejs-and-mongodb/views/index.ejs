<!DOCTYPE html>
<html lang="en">
<%- include("./partials/head") %>
<body>
    <%- include("./partials/nav") %>
    <p>Testing the Node.js server.</p>
    <div>
        <h2>Blogs</h2>
        <% if(blogs.length > 0) { %>
            <% blogs.forEach((blog) => { %>
                <a class="single" href="/blogs/<%= blog._id %>">
                    <h3><%= blog.title %></h3>
                </a>
                <p><%= blog.snippet %></p>
            <% }); %>
        <% } else { %>
            <p>No blogs.</p>
        <% } %>
    </div>
    <%- include("./partials/footer") %>
</body>
</html>

